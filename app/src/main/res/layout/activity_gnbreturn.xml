<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    >

    <include layout="@layout/common_header"
        android:id="@+id/inc_common_header"
        />



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@+id/inc_common_header"
        android:id="@+id/ll_btn"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Good Return"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:id="@+id/tv_good"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Good Return"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/white"
            android:id="@+id/tv_bad"
            />
    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@+id/ll_btn"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/ll_top"
        android:paddingTop="20dp"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fayha"
                android:gravity="start|center"
                android:textColor="@color/black"
                android:background="@color/lightgray"
                android:drawableRight="@drawable/ic_black_add"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:id="@+id/tv_add"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Berain"
                android:gravity="start|center"
                android:textColor="@color/white"
                android:drawableRight="@drawable/ic_remove_black_24dp"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:id="@+id/tv_remove"
                android:layout_below="@+id/tv_add"
                android:layout_marginBottom="5dp"
                />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="4"
                        android:layout_below="@id/tv_remove"
                        android:background="@color/colorPrimary"
                        android:layout_marginBottom="10dp"
                        >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="150 ML QTY"
                                                android:textColor="@color/white"
                                                android:paddingLeft="20dp"
                                                android:id="@+id/tv_left"
                                                android:gravity="start|center"
                                                android:paddingTop="5dp"
                                                />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Q/CTN"
                                                    android:layout_toRightOf="@+id/tv_left"
                                                    android:layout_toLeftOf="@+id/iv_left"
                                                    android:gravity="end"
                                                    android:paddingRight="5dp"
                                                    android:textColor="@color/white"
                                                    android:paddingTop="5dp"


                                                    android:layout_centerHorizontal="true"
                                                    />



                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/ic_remove_black_24dp"
                                                android:layout_toLeftOf="@+id/tv_middle"
                                                android:id="@+id/iv_left"
                                                />


                                           <TextView
                                               android:layout_width="wrap_content"
                                               android:layout_height="wrap_content"
                                               android:text="1"
                                               android:gravity="center"
                                               android:layout_centerInParent="true"
                                               android:textColor="@color/white"
                                               android:layout_toLeftOf="@+id/iv_end"
                                               android:id="@+id/tv_middle"
                                               android:padding="5dp"
                                               />


                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@drawable/ic_add_black_24dp"
                                                android:layout_alignParentRight="true"
                                                android:id="@+id/iv_end"
                                                android:paddingRight="5dp"
                                                />


                                    </RelativeLayout>



                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:layout_marginBottom="10dp"

                                        >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="150 ML QTY"
                                            android:textColor="@color/white"
                                            android:paddingLeft="20dp"
                                            android:id="@+id/tv_left"
                                            android:gravity="start|center"
                                            android:paddingTop="5dp"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Q/CTN"
                                            android:layout_toRightOf="@+id/tv_left"
                                            android:layout_toLeftOf="@+id/iv_left"
                                            android:gravity="end"
                                            android:paddingRight="5dp"
                                            android:textColor="@color/white"
                                            android:paddingTop="5dp"


                                            android:layout_centerHorizontal="true"
                                            />



                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_remove_black_24dp"
                                            android:layout_toLeftOf="@+id/tv_middle"
                                            android:id="@+id/iv_left"
                                            />


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="1"
                                            android:gravity="center"
                                            android:layout_centerInParent="true"
                                            android:textColor="@color/white"
                                            android:layout_toLeftOf="@+id/iv_end"
                                            android:id="@+id/tv_middle"
                                            android:padding="5dp"
                                            />


                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_add_black_24dp"
                                            android:layout_alignParentRight="true"
                                            android:id="@+id/iv_end"
                                            android:paddingRight="5dp"
                                            />


                                    </RelativeLayout>

                            <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginLeft="20dp"
                            />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"


                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150 ML QTY"
                                android:textColor="@color/white"
                                android:paddingLeft="20dp"
                                android:id="@+id/tv_left"
                                android:gravity="start|center"
                                android:paddingTop="5dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Q/CTN"
                                android:layout_toRightOf="@+id/tv_left"
                                android:layout_toLeftOf="@+id/iv_left"
                                android:gravity="end"
                                android:paddingRight="5dp"
                                android:textColor="@color/white"
                                android:paddingTop="5dp"


                                android:layout_centerHorizontal="true"
                                />



                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_remove_black_24dp"
                                android:layout_toLeftOf="@+id/tv_middle"
                                android:id="@+id/iv_left"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:gravity="center"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"
                                android:layout_toLeftOf="@+id/iv_end"
                                android:id="@+id/tv_middle"
                                android:padding="5dp"
                                />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add_black_24dp"
                                android:layout_alignParentRight="true"
                                android:id="@+id/iv_end"
                                android:paddingRight="5dp"
                                />


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"


                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150 ML QTY"
                                android:textColor="@color/white"
                                android:paddingLeft="20dp"
                                android:id="@+id/tv_left"
                                android:gravity="start|center"
                                android:paddingTop="5dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Q/CTN"
                                android:layout_toRightOf="@+id/tv_left"
                                android:layout_toLeftOf="@+id/iv_left"
                                android:gravity="end"
                                android:paddingRight="5dp"
                                android:textColor="@color/white"
                                android:paddingTop="5dp"


                                android:layout_centerHorizontal="true"
                                />



                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_remove_black_24dp"
                                android:layout_toLeftOf="@+id/tv_middle"
                                android:id="@+id/iv_left"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:gravity="center"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"
                                android:layout_toLeftOf="@+id/iv_end"
                                android:id="@+id/tv_middle"
                                android:padding="5dp"
                                />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add_black_24dp"
                                android:layout_alignParentRight="true"
                                android:id="@+id/iv_end"
                                android:paddingRight="5dp"
                                />


                        </RelativeLayout>

                    </LinearLayout>

        </RelativeLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/base"
            android:id="@+id/view"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/rl_bottom"
            android:padding="10dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="specify reason"
                android:textColor="@color/black"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spin"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_reason"
                >



            </Spinner>


        </RelativeLayout>




    </LinearLayout>








    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_confirm"
        android:layout_marginTop="10dp"
       />




</RelativeLayout>