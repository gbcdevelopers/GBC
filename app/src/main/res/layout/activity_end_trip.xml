<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    >

    <include layout="@layout/common_header"
        android:id="@+id/inc_common_header"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/inc_common_header"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgray"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL AMOUNT"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255"
                android:padding="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHEQUES"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/green"
                    android:id="@+id/tv_cheque"
                    android:background="@drawable/text_line"
                    />









            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CASH PAID"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/green"
                    android:background="@drawable/text_line"

                    />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255"
                android:textColor="@color/black"
                android:paddingRight="10dp"
                android:layout_alignParentRight="true"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPENSES"
                android:padding="10dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="255"
                android:padding="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />



        </RelativeLayout>


    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ll_bottom"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/custom_border"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Amt."
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            />



    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/double_tick"
        android:id="@+id/btn_float"
        app:backgroundTint="@color/colorPrimary"
        />

</RelativeLayout>