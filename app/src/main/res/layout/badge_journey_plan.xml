<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:elevation="@dimen/size_five"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/h4"
            >

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/list_space"
                android:layout_height="match_parent"
                />

        </LinearLayout>
        <LinearLayout android:id="@+id/ll_items"
                      xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:app="http://schemas.android.com/apk/res-auto"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/white"
                      android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_five"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <gbc.sa.vansales.views.TextViewWithLabel
                            android:id="@+id/customer_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            app:label="@string/customerid"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"

                        >

                        <gbc.sa.vansales.views.TextViewWithLabel
                            android:id="@+id/customer_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            app:label="@string/customer_name"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_customer_new"
                        android:src="@drawable/icon_new"
                        android:visibility="invisible"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <ImageView
                        android:id="@+id/img_customer_delivery"
                        android:src="@drawable/icon_delivery_pending"
                        android:visibility="invisible"
                        android:layout_marginLeft="@dimen/all_padding"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"

                >

                <gbc.sa.vansales.views.TextViewWithLabel
                    android:id="@+id/customer_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    app:label="@string/customer_address"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_five"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal"

                android:weightSum="12"
                >

                <ImageView
                    android:id="@+id/img_order"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:layout_weight="1"
                    android:src="@drawable/ic_c2"
                    />

                <ImageView
                    android:id="@+id/img_collection"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:layout_weight="1"
                    android:src="@drawable/ic_c1"
                    />



                <ImageView
                    android:id="@+id/img_sales"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:layout_weight="1"
                    android:src="@drawable/ic_c4"
                    />

                <ImageView
                    android:id="@+id/img_merchandize"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:layout_weight="1"
                    android:src="@drawable/ic_c3"
                    />

                <ImageView
                    android:id="@+id/img_delivery"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_width"
                    android:layout_weight="1"
                    android:src="@drawable/ic_c5"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>



