<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/dialog_salesinvoice_view"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    >



    <TextView
        android:id="@+id/dv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="AM502 Large Swiss Strawberry"
        android:textColor="@color/black"
        android:textSize="20dp"

        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dv_title"
        android:layout_marginBottom="5dp"
        android:background="@color/base" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Inv Qty."
                    android:textColor="@color/black"
                    android:textSize="15dp"

                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <EditText
                        android:id="@+id/ed_cases_inv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cases"
                        android:textColor="@color/black"
                        android:inputType="number"

                        android:textColorHint="@color/colorPrimary"
                        app:backgroundTint="@color/base" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <EditText
                        android:id="@+id/ed_pcs_inv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="pcs"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorPrimary"
                        app:backgroundTint="@color/base" />


                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Quantity"
                    android:textColor="@color/black"
                    android:textSize="15dp"

                    />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <EditText
                        android:id="@+id/ed_cases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cases"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorPrimary"
                        app:backgroundTint="@color/base"
                        android:inputType="number"
                        />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <EditText
                        android:id="@+id/ed_pcs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="pcs"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorPrimary"
                        app:backgroundTint="@color/base" />


                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_main"
        android:background="@color/green"
        android:text="save"
        android:textColor="@color/white" />





</RelativeLayout>