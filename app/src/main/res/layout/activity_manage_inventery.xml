<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnLoad"
            android:text="Load"

            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="@dimen/image_width"
            android:background="@color/manageinventorybuttons"
            android:drawableTop="@drawable/load"
            android:drawablePadding="1dp"
            android:padding="@dimen/h1"



            />

        <Button


            android:id="@+id/btnLoadRequest"
            android:text="Request"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="@dimen/h3"
            android:background="@color/manageinventorybuttons"
            android:drawableTop="@drawable/loaqrequest"
            android:drawablePadding="1dp"
            android:padding="@dimen/h1"


            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/h3"
        >
        <Button


            android:id="@+id/btnVanStock"
            android:text="VanStock"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/image_width"

            android:background="@color/manageinventorybuttons"
            android:drawableTop="@drawable/vanstock"
            android:drawablePadding="1dp"
            android:padding="@dimen/h1"


            />

        <Button


            android:id="@+id/btnUnLoad"
            android:text="UnLoad"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/h3"

            android:background="@color/manageinventorybuttons"
            android:drawableTop="@drawable/unload"
            android:drawablePadding="1dp"
            android:padding="@dimen/h1"

            />
    </LinearLayout>


</LinearLayout>
