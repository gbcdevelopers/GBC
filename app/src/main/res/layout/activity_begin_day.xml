<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="430dp"
            android:paddingRight="40dp"
            android:layout_marginTop="20dp"

            android:layout_marginLeft="10dp"
            android:layout_marginBottom="50dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvroute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Route # : "
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/tvSalesManNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Sales Man No :  "
                android:layout_below="@id/tvroute"
                android:layout_marginLeft="5dp"


                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/tvSalesManName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Name : "
                android:layout_below="@+id/tvSalesManNo"
                android:layout_marginLeft="5dp"


                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/tvsalesDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Sales Date : "

                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tvSalesManName"
                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tvsalesDate"
                android:text="Time : "

                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/tvdelieveryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tvtime"
                android:text="Delievery Date : "

                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"
                />



            <TextView
                android:id="@+id/tvdelieveryRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="Route : "

                android:layout_marginLeft="5dp"
                android:layout_below="@id/tvdelieveryDate"
                android:textColor="@color/colorPrimary"
                />



            <TextView
                android:id="@+id/tvvehicleNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:layout_marginLeft="5dp"
                android:layout_below="@id/tvdelieveryRoute"
                android:text="Vehicle No. : "
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tvvehicleNo"
                android:text="Day :  "
                android:textColor="@color/colorPrimary"

                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="430dp"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="0dp"
            android:background="@color/white"


            android:orientation="vertical" >

            <TextView
                android:id="@+id/route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:layout_marginLeft="5dp"
                android:textColor="#000000"

                />


            <TextView
                android:id="@+id/salesManNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:layout_marginLeft="5dp"
                android:layout_below="@id/tvroute"
                android:textColor="#000000"

                />
            <TextView
                android:id="@+id/salesManName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tvSalesManNo"
                android:textColor="#000000"

                />


            <TextView
                android:id="@+id/salesDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tvSalesManName"
                android:textColor="#000000"

                />


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tvsalesDate"

                android:text="N-A"

                android:layout_marginLeft="5dp"
                android:textColor="#000000"

                />


            <TextView
                android:id="@+id/delieveryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tvtime"


                android:layout_marginLeft="5dp"                    android:textColor="@color/colorPrimary"
                />



            <TextView
                android:id="@+id/delieveryRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:layout_marginLeft="5dp"

                android:layout_below="@id/tvdelieveryDate"
                android:textColor="#000000"
                />



            <TextView
                android:id="@+id/vehicleNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tvdelieveryRoute"

                android:text="N-A"

                android:layout_marginLeft="5dp"
                android:textColor="#000000"

                />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="N-A"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                />



        </LinearLayout>
    </LinearLayout>
    <Button android:id="@+id/btnBack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="START"
            android:layout_alignParentBottom="true"
            android:background="@color/buttoncolor"
            android:textColor="@color/white"
        />


</RelativeLayout>