<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        >

        <!--Main Body of your custom dialog-->

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="M1:"
            android:id="@+id/tvM1"
            android:editable="false"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"

            >
        </EditText>
        <EditText
            android:id="@+id/etCase"
            android:layout_width="80dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvM1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"

            android:hint="0"

            >

            <requestFocus />

        </EditText>

        <EditText
            android:id="@+id/etPcs"
            android:layout_width="80dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/etCase"
            android:hint="0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"

            >

            <requestFocus />

        </EditText>


        <TextView
            android:id="@+id/tvReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:text="Reason : "
            android:textStyle="bold"
            android:textSize="18dp"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:entries="@array/unloadReasons"
            android:layout_below="@+id/etPcs"

            />


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:entries="@array/unloadReasons"
            android:layout_below="@+id/etPcs"
            android:layout_toRightOf="@+id/tvReason"

            />

        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/cancelcolor"

            android:layout_below="@+id/btnOk"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"

            android:layout_centerHorizontal="true"

            />

        <Button
            android:id="@+id/btnOk"
            android:text="OK"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:layout_below="@+id/spinner"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="10dp"

            android:textColor="@color/white"
            android:background="@color/buttoncolor"
            android:layout_marginLeft="5dp"

            />




    </RelativeLayout>



</RelativeLayout>