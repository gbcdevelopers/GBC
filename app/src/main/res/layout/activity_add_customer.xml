<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".activities.AddCustomerActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="2"
                    android:text="@string/customerid"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_weight="3"
                    android:id="@+id/tv_customer_id"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="2"
                    android:text="@string/customer_name"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:layout_weight="3"
                    android:id="@+id/et_customer_name"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:hint="@string/hint_customer_name"
                    android:textColorHint="@color/gray"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="2"
                    android:text="@string/customer_address1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:layout_weight="3"
                    android:id="@+id/et_customer_address1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/black"
                    android:maxLength="30"
                    android:hint="@string/hint_customer_address1"
                    android:textColorHint="@color/gray"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="2"
                    android:text="@string/customer_address2"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:layout_weight="3"
                    android:id="@+id/et_customer_address2"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:hint="@string/hint_customer_address2"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="2"
                    android:text="@string/tv_cust_detail2"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:layout_weight="3"
                    android:id="@+id/et_customer_pobox"
                    android:inputType="number"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:hint="@string/hint_customer_pobox"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="2"
                    android:text="@string/email"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:layout_weight="3"
                    android:id="@+id/et_customer_email"
                    android:inputType="textEmailAddress"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:hint="@string/hint_customer_email"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="2"
                    android:text="@string/telephone"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:layout_weight="3"
                    android:id="@+id/et_customer_telephone"
                    android:inputType="phone"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:hint="@string/hint_customer_phone"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="2"
                    android:text="@string/fax"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:layout_weight="3"
                    android:id="@+id/et_customer_fax"
                    android:inputType="phone"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:hint="@string/hint_customer_fax"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="2"
                    android:text="@string/beginday_route"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_weight="3"
                    android:id="@+id/tv_customer_route"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="2"
                    android:text="@string/sales_area"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_weight="3"
                    android:id="@+id/tv_customer_sales_area"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/label_small"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>

        </LinearLayout>


    </RelativeLayout>
    <Button
        android:id="@+id/btn_add_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:text="@string/add_customer"
        android:textColor="@color/white"
        android:visibility="visible"
        />





</RelativeLayout>